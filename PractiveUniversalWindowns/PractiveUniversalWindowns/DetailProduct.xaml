<UserControl
    x:Class="PractiveUniversalWindowns.DetailProduct"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PractiveUniversalWindowns"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:data="using:PractiveUniversalWindowns.Model"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <StackPanel HorizontalAlignment="Center" Margin="10">


        <Image x:Name="AvatarImage" Source="{x:Bind Product.NameProduct }" Width="100" Height="100"/>

        <StackPanel Orientation="Horizontal" Margin="0,10,0,0" HorizontalAlignment="Center">
            <TextBlock Text="{x:Bind Product.DescriptionProduct }"  Margin="0,0,5,0"/>
            <TextBlock Text="{x:Bind Product.ImagePath}"   Margin="0,0,5,0"/>
        </StackPanel>
    </StackPanel>
</UserControl>
