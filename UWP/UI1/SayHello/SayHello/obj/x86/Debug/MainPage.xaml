    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid FocusVisualPrimaryBrush="White">
        <TextBox x:ConnectionId='2' HorizontalAlignment="Left" Margin="304,221,0,0"  TextWrapping="Wrap" x:Name="txtName" VerticalAlignment="Top" Width="340" Grid.RowSpan="1"/>
        <Button x:ConnectionId='3' Content="Say Hi" Margin="305,0,0,0" Width="339" x:Name="btnSay"  Height="37"                     />
        <TextBlock x:ConnectionId='4' HorizontalAlignment="Left" Margin="304,432,0,0" Text="TextBlock" x:Name="tblSay" TextWrapping="Wrap" VerticalAlignment="Top" Width="340" Height="50"/>
    </Grid>
</Page>

