<UserControl x:ConnectionId='1'
    x:Class="Lap44.NewsItemControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Lap44"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid  Margin="10" Height="275" Width="200" >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState x:ConnectionId='2' x:Name="Narrowlayout">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="MainPanel.Width" Value="200"/>
                        <Setter Target="MainPanel.Height" Value="275"/>
                        <Setter Target="HeadlineTextBlock.FontSize" Value="18"/>
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:ConnectionId='3' x:Name="WideLayout">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="900"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="MainPanel.Width" Value="300"/>
                        <Setter Target="MainPanel.Height" Value="300"/>
                        <Setter Target="HeadlineTextBlock.FontSize" Value="26"/>
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <Image x:ConnectionId='4' x:Name="MyImage" Grid.Row="0"                                  />
        <RelativePanel Grid.Row="1" Margin="20,0,0,0">
            <TextBlock x:ConnectionId='5'                                  
                       RelativePanel.AlignTopWithPanel="True"
                       FontSize="18" 
                       Name="HeadlineTextBox"
                       TextWrapping="Wrap"/>
            <TextBlock x:ConnectionId='6'                                 
                       RelativePanel.Below="HeadlineTextBox"
                       TextWrapping="Wrap"/>
            <TextBlock x:ConnectionId='7'                                  
                       RelativePanel.AlignBottomWithPanel="True"
                       FontSize="10"/>
        </RelativePanel>
    </Grid>
</UserControl>

