<Page
    x:Class="Lap21.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Lap21"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <RelativePanel>
            <Button x:ConnectionId='7' x:Name="HamburgerButton"
                    FontFamily="Segoe MDL2 Assets"
                   Content="&#xE700;"
                    FontSize="36"
                                                 />
        </RelativePanel>
        <SplitView x:ConnectionId='2' x:Name="MySplitView"
                   Grid.Row="1"
                   DisplayMode="CompactOverlay"
                   OpenPaneLength="200"
                   CompactPaneLength="56"
                   HorizontalAlignment="Left">
            <SplitView.Pane>
                <ListBox x:ConnectionId='3' SelectionMode="Single"
                         Name="IconsListBox"
                                                                         >
                    <ListBoxItem x:ConnectionId='4' Name="ShareListBoxItem">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="Segoe MDL2 Assets"
                                       FontSize="36"
                                      Text="&#xE72D;" />
                            <TextBlock x:ConnectionId='6' Text="Share"
                                       FontSize="24"
                                      Margin="20,0,0,0"
                                       Name="ResultTextBlock"/>
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem x:ConnectionId='5' Name="FavoritesListBoxItem">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="Segoe MDL2 Assets"
                                       FontSize="36"
                                      Text="&#xE734;"/>
                            <TextBlock FontFamily="Favorites"
                                       FontSize="24"
                                      Margin="20,0,0,0"
                                       />
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem/>
                </ListBox>
            </SplitView.Pane>

        </SplitView>
    </Grid>
</Page>

