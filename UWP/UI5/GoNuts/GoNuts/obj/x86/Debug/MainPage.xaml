<Page
    x:Class="GoNuts.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GoNuts"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Page.Resources>
        <Style TargetType="Button" x:Key="NavigationButtonStyle">
            <Setter Property="Background" Value="Black"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="VerticalAlignment" Value="Stretch"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="BorderThickness" Value="0,0,2,0"/>
        </Style>
        <Style TargetType="Image" x:Key="IconImageStyle">
            <Setter Property="Height" Value="20"/>
            <Setter Property="Width" Value="20"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
        </Style>
    </Page.Resources>
    <Grid Background="{ThemeResource AppBarBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Button x:ConnectionId='2' Grid.Row="0" 
                Name="DonutButton"
                                         
                Style="{StaticResource NavigationButtonStyle}" >
            <StackPanel Orientation="Horizontal">
                <Image Source="/Assets/Square150x150Logo.scale-200.png" 
                       Style="{StaticResource IconImageStyle}"/>
                <TextBlock Text="Donut" Foreground="White"/>
            </StackPanel>
        </Button>
        <TextBlock x:ConnectionId='3' x:Name="Demo" Grid.Row="1" Grid.Column="1" Text="Demo" FontSize="45"/>
        <Button x:ConnectionId='4' Grid.Row="0"
                Name="CoffeeButton"
                                           
                Grid.Column="1" 
                Style="{StaticResource NavigationButtonStyle}" >
            <StackPanel Orientation="Horizontal">
                <Image Source="/Assets/Square150x150Logo.scale-200.png" 
                       Style="{StaticResource IconImageStyle}"/>
                <TextBlock Text="Coffee"
                           Foreground="White"/>
            </StackPanel>
        </Button>
        
        <Button x:ConnectionId='5' Grid.Row="0"
                Name="ScheduleButton"
                                            
                Grid.Column="2"
                Style="{StaticResource NavigationButtonStyle}" >
            <StackPanel Orientation="Horizontal">
                <Image Source="/Assets/Square150x150Logo.scale-200.png" 
                       Style="{StaticResource IconImageStyle}"/>
                <TextBlock Text="Schedule" 
                           Foreground="White"/>
            </StackPanel>
        </Button>
        
        <Button x:ConnectionId='6' Grid.Row="0"
                Name="CompleteButton"
                                            
                Grid.Column="4"
                Style="{StaticResource NavigationButtonStyle}" >
            <StackPanel Orientation="Horizontal">
                <Image Source="/Assets/Square150x150Logo.scale-200.png" 
                       Style="{StaticResource IconImageStyle}"/>
                <TextBlock Text="Complete" 
                            Foreground="White"/>
            </StackPanel>
        </Button>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2"/>
                <ColumnDefinition Width="1"/>
            </Grid.ColumnDefinitions>
            <Frame x:ConnectionId='7' x:Name="MyFrame">
            </Frame>
            <Image Source="/Assets/CoffeePage.jpeg"
                   Stretch="UniformToFill"
                   Grid.Column="1"/>

        </Grid>
    </Grid>
</Page>

